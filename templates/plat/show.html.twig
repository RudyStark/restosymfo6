{% extends 'base.html.twig' %}

{% block body %}


    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">
                Mes ingredients
            </h5>

            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                On récupère tout les plats du restaurant
                {% for restaurant in restaurants %}
                    {% for plat in restaurant.plats %}
                            <tr>
                                <td>{{ plat.name }}</td>
                                <td>{{ plat.price }}</td>
                                <td>
                                    <a href="{{ path('app_plat_update', {'id': plat.id}) }}" class="btn btn-primary">Modifier</a>
                                    <a href="{{ path('app_plat_delete', {'id': plat.id}) }}" class="btn btn-danger">Supprimer</a>
                                </td>
                            </tr>
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>

        </div>
        {#            <a href="{{ path('app_menu_create', {'id': restaurant.id}) }}" class="btn btn-primary">Ajouter un menu</a>#}
    </div>


    <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour</a>
{% endblock %}